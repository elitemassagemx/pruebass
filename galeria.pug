doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Galería - Elite Massage
    link(rel="stylesheet", href="galeria.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    header.container.mt-4.mb-4
      h1.text-center Galería de Elite Massage
      a.btn.btn-primary(href="index.html") Volver a Inicio
    main.container
      - var max = 35
      #gallery
        - for(var n=1; n<=max; n++)
          div
            img(src=`https://raw.githubusercontent.com/elitemassagemx/Home/main/IMG/imagen${n}.webp`, alt=`Imagen ${n}`)
            a(href=`#lightbox-${n}`)= `Imagen ${n}`
      
      - for(var n=1; n<=max; n++)
        .lightbox(id=`lightbox-${n}`)
          .content
            img(src=`https://raw.githubusercontent.com/elitemassagemx/Home/main/IMG/imagen${n}.webp`, alt=`Imagen ${n}`)
            .title= `Imagen ${n}`
            a.close(href='#gallery')

    script(src="galeria.js")
